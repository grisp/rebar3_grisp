{deps, [
    {{^grisp_io}}grisp{{/grisp_io}}{{#grisp_io}}{grisp_connect, {git, "https://github.com/grisp/grisp_connect", {branch, "main"}}}{{/grisp_io}}{{#epmd}},
    {epmd, {git, "https://github.com/erlang/epmd", {ref, "4d1a59"}}}
    {{/epmd}}
]}.

{erl_opts, [debug_info]}.

{plugins, [rebar3_grisp]}.

{grisp, [
    {otp, [
        {version, "{{otp_version}}"}
    ]},
    {deploy, [
        {destination, "{{dest}}"}
    ]}
]}.

{shell, [{apps, []}]}.

{relx, [
    {release, {{{name}}, "0.1.0"}, [
        {{#epmd}}
        {epmd, none},
        {{/epmd}}
        {{name}}
    ]}
]}.
